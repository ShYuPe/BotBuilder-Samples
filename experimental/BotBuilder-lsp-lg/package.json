{
	"name": "botbuilder-lsp-lg",
	"description": "Lg extension of botbulider using lsp",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ShYuPe/BotBuilder-lsp-lg"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:lg"
	],
	"main": "./client/out/extension",
	"contributes": {
        "configuration": [
            {
                "title": "LG",
                "properties": {
                    "LG.Expression.ignoreUnknownFunction": {
                        "type": "string",
                        "enum": [
                            "error",
                            "warn",
                            "ignore"
                        ],
                        "default": "error",
                        "description": "Configure Diagnostics: Show diagnostic severity level of unknow functions in a LG file",
                        "scope": "window"
                    },
                    "LG.Expression.customFunctionList": {
                        "type": "string",
                        "default": "",
                        "description": "Customized function list, should be separated by comma, eg. a, b, c"
                    }
                }
			},
			{
				"type": "object",
				"title": "Example configuration",
				"properties": {
					"languageServerExample.maxNumberOfProblems": {
						"scope": "resource",
						"type": "number",
						"default": 100,
						"description": "Controls the maximum number of problems produced by the server."
					},
					"languageServerExample.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
        ],
		"languages": [
			{
				"id": "lg",
				"extensions": [
					".lg"
				],
				"configuration": "./client/resources/lg/lg-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lg",
				"scopeName": "source.lg",
				"path": "./client/resources/lg/lg.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.9.3",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"eslint": "^7.3.1",
		"typescript": "^3.5.3"
	}
}
